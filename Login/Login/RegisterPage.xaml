<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Login.RegisterPage">
    <ContentPage.Content>
        <StackLayout Padding="20" VerticalOptions="Center">
            <Label Text="Please Register!" FontSize="Large" VerticalOptions="Center" HorizontalOptions="Center"/>
            <Image Source="emergency_vet.png"/>
            <Entry x:Name="txtUserName" Placeholder="Username" FontSize="Large" />
            <Entry x:Name="txtFirstName" Placeholder="First Name" FontSize="Large"  />
            <Entry x:Name="txtLastName"  Placeholder="Last Name"  FontSize="Large" />
            <Entry x:Name="txtEmail"  Placeholder="Email" FontSize="Large" />
            <Entry x:Name="txtPassword" Placeholder="Password" FontSize="Large" IsPassword="True"/>
            <Button x:Name="btnCreate" Text="Register" Font="large" BackgroundColor="LightBlue" Clicked="btnCreate_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>